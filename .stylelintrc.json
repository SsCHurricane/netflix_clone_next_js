{
	"extends": [
		"stylelint-config-standard-scss",
		"stylelint-config-prettier-scss",
		"stylelint-order-config-standard"
	],
	"plugins": ["stylelint-order", "stylelint-scss"],
	"rules": {
		"indentation": ["tab"],
		"color-hex-case": "lower",
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"apply",
					"tailwind",
					"screen",
					"if",
					"else",
					"return",
					"function",
					"debug"
				]
			}
		],
		"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"tailwind",
					"apply",
					"responsive",
					"variants",
					"screen"
				]
			}
		]
	}
}
